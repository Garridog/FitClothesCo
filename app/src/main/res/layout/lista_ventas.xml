<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/lblNombres"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Nombre C:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/nombres"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="XXXXXX"
        android:layout_toRightOf="@+id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblPrendas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Prenda:"
        android:layout_below="@+id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/prendas"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="XXXXXX"
        android:layout_below="@id/lblNombres"
        android:layout_toRightOf="@+id/lblPrendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblPrecio"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Precio:"
        android:layout_below="@+id/lblPrendas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/precio"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="XXXXXX"
        android:layout_below="@id/lblPrendas"
        android:layout_toRightOf="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblFecha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Fecha. Reg:"
        android:layout_below="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fecha"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="XXXXXX"
        android:layout_below="@id/lblPrecio"
        android:layout_toRightOf="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>